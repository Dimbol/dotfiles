TEXT
$color1$alignc$nodename - $sysname $kernel
${font :size=18}$alignc${tztime America/Halifax %F %A %R}$font${if_existing /dev/shm/weather}
$alignr${head /dev/shm/weather 1 30}$endif
$hr$color
Uptime: $color1$alignr$uptime$color
RAM: $color1$alignr$mem/$memmax$color ${membar 4,180}
Networking: ${if_existing /dev/shm/ip}$alignr${head /dev/shm/ip 1 30}$endif
 $color1↑$alignr${upspeedf eth0}${color}K ${upspeedgraph eth0 14,260 60}
 $color1↓$alignr${downspeedf eth0}${color}K ${downspeedgraph eth0 14,260 550}${font :size=10}
$hr$font
CPUs: ${font :size=10}$alignc               \
 ${color #AAAAAA}${loadavg 1}  ${color #CCCCCC}${loadavg 2}  ${color #FFFFFF}${loadavg 3}$color
  ${hwmon temp 2}°C$alignr$color1${cpu cpu1}%$color ${cpugraph cpu1 14,260}
  ${hwmon temp 3}°C$alignr$color1${cpu cpu2}%$color ${cpugraph cpu2 14,260}
  ${hwmon temp 4}°C$alignr$color1${cpu cpu3}%$color ${cpugraph cpu3 14,260}
  ${hwmon temp 5}°C$alignr$color1${cpu cpu4}%$color ${cpugraph cpu4 14,260}
$hr$font
GPU: ${font :size=10} \
 $alignc ${nvidia temp}°C
$hr$font
Disks: ${font :size=10}$alignr$color1※$color ${fs_used_perc /tmp}%    $color1~$color ${fs_used_perc /home/jack}%    $color1/$color ${fs_used_perc /}%    $color1⌘$color ${fs_used_perc /home/shared}% 
 /dev/sda $alignr${diskiograph /dev/sda 14,260}
 /dev/sdb $alignr${diskiograph /dev/sdb 14,260}${if_mounted /media/truecrypt1}
 /dev/sdg $alignr${diskiograph /dev/sdg 14,260}$endif
$hr$font
Processes: ${font DroidSansMono:size=10}$alignr$running_processes/$processes 
 ${top name 1}   ${top pid 1}   ${top cpu 1}  $alignr${top mem_res 1} 
 ${top name 2}   ${top pid 2}   ${top cpu 2}  $alignr${top mem_res 2} 
 ${top name 3}   ${top pid 3}   ${top cpu 3}  $alignr${top mem_res 3} 
 ${top name 4}   ${top pid 4}   ${top cpu 4}  $alignr${top mem_res 4} 
 ${top name 5}   ${top pid 5}   ${top cpu 5}  $alignr${top mem_res 5} 
