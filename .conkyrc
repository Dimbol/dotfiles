alignment top_right
background yes
border_width 1
cpu_avg_samples 2
net_avg_samples 2
diskio_avg_samples 2
default_color bebebe
default_outline_color bebebe
default_shade_color bebebe
color1 ffffff
draw_borders no
draw_graph_borders no
draw_outline no
draw_shades no
format_human_readable yes
use_xft yes
xftfont DejaVu Sans Mono:size=12
gap_x 5
gap_y 0
minimum_size 358 489
net_avg_samples 2
no_buffers yes
out_to_console no
out_to_stderr no
extra_newline no
own_window yes
own_window_class Conky
own_window_hints undecorated,skip_taskbar,skip_pager,sticky
own_window_colour 405070
stippled_borders 0
update_interval 1.0
uppercase no
use_spacer none
short_units yes
show_graph_scale no
show_graph_range no
double_buffer yes
top_name_width 15

