general {
        colors = true
        interval = 1
}

order += "volume master"
order += "run_watch Transmission"
order += "run_watch MPD"
order += "time"

ethernet enp2s0 {
        # if you use %speed, i3status requires root privileges
        format_up = "E: %ip (%speed)"
        format_down = "E: down"
}

run_watch DHCP {
        pidfile = "/var/run/dhc*.pid"
}

run_watch Transmission {
        pidfile = "/var/run/transmission/daemon.pid"
}

run_watch MPD {
        pidfile = "/var/run/.mpd/mpd.pid"
}

time {
        format = "%Y-%m-%d (%a) %H:%M:%S"
}

load {
        format = "%1min"
}

disk "/tmp" {
        format = "%free (or: %percentage_used used, %percentage_used_of_avail used of avail, %percentage_free free, %percentage_avail avail)"
}

volume master {
        format = "â™ª: %volume"
        device = "default"
        mixer = "Master"
        mixer_idx = 0
}
